#!/bin/bash
set -e

manifest="$1"
dest="$2"

if [ -z "$manifest" ]; then
  manifest=/vagrant/manifest.txt
fi
manifest=$(readlink -f "$manifest")

if [ -z "$dest" ]; then
  dest=/vagrant/src
fi
cd "$dest"

while read line; do
  repo=($line)
  name=${repo[0]}
  rev=${repo[1]}
  if [ ! -d $name ]; then
    echo "====> Checking out $name..."
    git clone https://github.com/flynn/$name
    pushd $name > /dev/null
    git checkout $rev
    popd > /dev/null
  fi
done < "$manifest"
